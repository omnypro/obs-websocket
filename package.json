{
  "name": "@omnypro/obs-websocket",
  "version": "0.1.0",
  "description": "Modern OBS WebSocket client for Bun runtime",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build:esm && bun run build:cjs && bun run build:types",
    "build:esm": "bun build src/index.ts --outdir=dist --target=bun",
    "build:cjs": "bun build src/index.ts --target=node --format=cjs --outfile=dist/index.cjs",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["obs", "websocket", "obs-websocket", "streaming", "bun", "typescript"],
  "author": "Omnypro",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omnypro/obs-websocket.git"
  },
  "bugs": {
    "url": "https://github.com/omnypro/obs-websocket/issues"
  },
  "homepage": "https://github.com/omnypro/obs-websocket#readme"
}
